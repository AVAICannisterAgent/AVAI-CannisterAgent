{
  "version": 1,
  "canisters": {
    "avai_backend": {
      "type": "motoko",
      "main": "app/agent/canister/src/main.mo",
      "dependencies": [],
      "gzip": true,
      "declarations": {
        "output": "app/agent/canister/declarations/avai_backend",
        "bindings": ["js", "ts", "did"],
        "env_override": "local"
      },
      "metadata": {
        "description": "AVAI Backend Canister for WebSocket/Redis Integration",
        "version": "2.0.0",
        "features": ["redis_integration", "websocket_support", "report_storage"]
      }
    },
    "avai_analyzer": {
      "type": "motoko",
      "main": "app/agent/canister/src/analyzer.mo", 
      "dependencies": ["avai_backend"],
      "gzip": true,
      "declarations": {
        "output": "app/agent/canister/declarations/avai_analyzer",
        "bindings": ["js", "ts", "did"],
        "env_override": "local"
      },
      "metadata": {
        "description": "AVAI Code Analysis Engine with Real-time Processing",
        "version": "2.0.0",
        "features": ["code_analysis", "security_scanning", "pattern_detection"]
      }
    },
    "avai_audit_engine": {
      "type": "motoko",
      "main": "app/agent/canister/src/audit_engine.mo",
      "dependencies": ["avai_backend", "avai_analyzer"],
      "gzip": true,
      "declarations": {
        "output": "app/agent/canister/declarations/avai_audit_engine",
        "bindings": ["js", "ts", "did"],
        "env_override": "local"
      },
      "metadata": {
        "description": "AVAI Security Audit Engine with Vulnerability Detection",
        "version": "2.0.0", 
        "features": ["security_audit", "vulnerability_scanner", "compliance_check"]
      }
    },
    "avai_report_generator": {
      "type": "motoko",
      "main": "app/agent/canister/src/report_generator.mo",
      "dependencies": ["avai_backend", "avai_analyzer", "avai_audit_engine"],
      "gzip": true,
      "declarations": {
        "output": "app/agent/canister/declarations/avai_report_generator",
        "bindings": ["js", "ts", "did"],
        "env_override": "local"
      },
      "metadata": {
        "description": "AVAI Report Generation System with PDF and Markdown Support",
        "version": "2.0.0",
        "features": ["report_generation", "pdf_export", "markdown_export", "real_time_updates"]
      }
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral",
      "replica": {
        "port": 4943,
        "subnet_type": "application"
      },
      "bootstrap": {
        "ip": "127.0.0.1", 
        "port": 4943,
        "timeout": 120
      },
      "provider": {
        "host": "127.0.0.1",
        "port": 4943
      }
    },
    "ic": {
      "providers": ["https://ic0.app"],
      "type": "persistent"
    },
    "testnet": {
      "providers": ["https://testnet.dfinity.network"],
      "type": "persistent"
    },
    "playground": {
      "providers": ["https://play.dfinity.network"],
      "type": "persistent"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    },
    "canister_http": {
      "enabled": true,
      "max_request_bytes": 2097152,
      "max_response_bytes": 2097152
    },
    "replica": {
      "subnet_type": "application"
    }
  },
  "dfx": "0.15.0",
  "output_env_file": ".env",
  "bootstrap": {
    "ip": "127.0.0.1",
    "port": 4943,
    "timeout": 120,
    "wait_for_healthy_node": 60
  },
  "build": {
    "output": ".dfx/local/canisters"
  },
  "extension": {
    "autoformat": true,
    "autocomplete": true
  },
  "websocket": {
    "enabled": true,
    "port": 8080,
    "redis_integration": {
      "host": "localhost",
      "port": 6379,
      "queues": ["avai:prompt_queue", "avai:queue:responses", "avai:queue:broadcast"]
    }
  },
  "avai_integration": {
    "websocket_url": "wss://websocket.avai.life/ws",
    "redis_host": "localhost",
    "redis_port": 6379,
    "queue_names": {
      "prompt_queue": "avai:prompt_queue",
      "response_queue": "avai:queue:responses", 
      "broadcast_queue": "avai:queue:broadcast"
    },
    "canister_features": {
      "real_time_analysis": true,
      "redis_event_streaming": true,
      "websocket_notifications": true,
      "dashboard_integration": true
    }
  }
}
